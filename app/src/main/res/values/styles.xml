<resources>
    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_style1">
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="android:textSize">@dimen/text_size1</item>
    </style>

    <style name="text_style2">
        <item name="android:textColor">@color/colorContrast</item>
        <item name="android:textSize">@dimen/text_size1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style3">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size2</item>
    </style>
</resources>
